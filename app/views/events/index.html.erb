<h1>Disaster Info</h1>

<%= form_tag events_path, :method => :get do %>
  <%= text_field_tag "keyword" %>
  <%= submit_tag "Search", :class => "btn btn-warning" %>
<% end %>

<table class="table">
	<% @events.each do |e| %>
		<tr>
			<td>
				<%= link_to e.title, event_path(e), :class => "btn btn-default" %>
			</td>
			<td>
				<%= e.user.try(:short_name) %>
			</td>
			<td>				
				<%= link_to 'Edit', edit_event_path(e), :class => "btn btn-primary" %>
				<%= link_to 'Delete', event_path(e), :method => :delete, :class => "btn btn-danger" %>
			</td>
			<td>
				<% Time.zone = "Taipei" %>
				<%= e.updated_at %>
			</td>			
		</tr>
	<% end %>
</table>

<%= link_to 'New Event', new_event_path, :class => "btn btn-info" %>
<p>
	<%= paginate @events %>
</p>

