<% if @event.errors.any? %>
    <ul>
    	<% @event.errors.full_messages.each do |msg| %>
    		<li><%= msg %></li>
    	<% end %>
    </ul>
<% end %>

<p>
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>
</p>
